<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:paddingLeft="@dimen/adapter_padding"
    android:paddingRight="@dimen/adapter_padding"
    android:paddingTop="@dimen/adapter_padding"
    android:background="@drawable/selector_grey">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="@dimen/adapter_thumb"
        android:layout_height="@dimen/adapter_thumb"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="@dimen/adapter_padding"
        android:layout_marginEnd="@dimen/adapter_padding"
        android:background="@drawable/icv_notifications_blue"
        android:padding="@dimen/adapter_padding"
        />


    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_content"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@color/text_h1"
        android:layout_toRightOf="@+id/img_1"
        android:layout_toEndOf="@+id/img_1"
        android:text="@string/app_name"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_content"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textColor="@color/text_content"
        android:layout_toRightOf="@+id/img_1"
        android:layout_below="@+id/txt_1"
        android:text="@string/app_name"
        />

    <TextView
        android:id="@+id/txt_3"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:ellipsize="marquee"
        android:textColor="@color/text_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_3"
        android:layout_alignLeft="@+id/txt_3"
        android:layout_below="@+id/txt_3"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txt_4"
            android:text="@string/number_1"
            android:layout_width="@dimen/unread_drawable"
            android:layout_height="@dimen/unread_drawable"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:background="@drawable/oval_accent_solid"
            android:gravity="center"
            android:padding="0dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_toRightOf="@+id/img_1"
        android:layout_alignParentBottom="true"
        android:background="@color/adapter_line"
        />

</RelativeLayout>
