<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adapter"
    android:padding="@dimen/adapter_padding">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="@dimen/adapter_thumb"
        android:layout_height="@dimen/adapter_thumb"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="@dimen/adapter_padding"
        android:layout_marginEnd="@dimen/adapter_padding"
        />

    <View
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_1"
        android:layout_toEndOf="@+id/img_1"
        />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_h2"
        android:textColor="@color/text_h1"
        android:layout_toRightOf="@+id/img_1"
        android:layout_toEndOf="@+id/img_1"
        android:layout_above="@id/center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_content"
        android:textColor="@color/text_content"
        android:layout_toRightOf="@+id/img_1"
        android:layout_toEndOf="@+id/img_1"
        android:layout_below="@+id/txt_1"/>

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_content"
        android:textColor="@color/text_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/center"/>

    <View
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/img_1"
        android:layout_toEndOf="@+id/img_1"
        android:background="@color/adapter_line"
        />

</RelativeLayout>
