<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_camera_white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bgSecondary"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:drawableLeft="@drawable/ic_chat_bubble_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="081327529690"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:layout_margin="16dp"
                >
            </TextView>

            <TextView
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Wisnu Kuncoro"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:layout_margin="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="7 message of 5 clients"
                android:drawableLeft="@drawable/ic_cloud_done"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:layout_margin="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="11 message of 7 clients"
                android:drawableLeft="@drawable/ic_cloud_upload"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:layout_margin="16dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
